<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/colorPrimary"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@android:color/white"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/captcha_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="captchaAdd:"/>

                    <EditText
                        android:id="@+id/ev_captcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/captcha_result_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/captcha_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="captchaResult:"/>

                    <TextView
                        android:id="@+id/tv_captcha_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/bt_captcha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/captcha_result_ly"
                    android:layout_margin="2dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/colorPrimary"

                    android:text="get captcha"
                    android:textColor="@android:color/white"/>
            </RelativeLayout>

            <WebView
                android:id="@+id/wv_captcha"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="12dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:id="@+id/login_email_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="email:"/>

                    <EditText
                        android:id="@+id/et_login_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="soul_hh@foxmail.com"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_password_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_email_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="password:"/>

                    <EditText
                        android:id="@+id/et_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LIANGei_621317"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/remember_me_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_password_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="rememberMe?"/>

                    <CheckBox
                        android:id="@+id/cb_remember_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_xsrf_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/remember_me_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="xsrf:"/>

                    <EditText
                        android:id="@+id/et_login_xsrf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_captcha_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_xsrf_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="captcha:"/>

                    <EditText
                        android:id="@+id/et_login_captcha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_captcha_type_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_captcha_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="captchaType:"/>

                    <EditText
                        android:id="@+id/et_login_captcha_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cn"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/login_result_ly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_captcha_type_ly"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="loginResult:"/>

                    <TextView
                        android:id="@+id/tv_login_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


                <Button
                    android:id="@+id/bt_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_result_ly"
                    android:layout_margin="2dp"
                    android:layout_marginTop="8dp"
                    android:background="?attr/colorPrimary"
                    android:text="login"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/bt_get_followers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bt_login"
                    android:layout_margin="2dp"
                    android:text="get followees"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/image_test"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/white"/>

                <ImageView
                    android:id="@+id/image_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:background="@android:color/white"/>

                <com.felipecsl.gifimageview.library.GifImageView
                    android:id="@+id/image_gif"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="12dp"
                    android:background="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>